<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin">

    <ListView
        android:id="@+id/appwidget_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_and_buttons_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_launcher_background"
        />

    <LinearLayout
        android:id="@+id/title_and_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageButton
            android:layout_marginStart="8dp"
            android:id="@+id/button_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button_back_recipe"
            android:src="@drawable/ic_arrow_back_24dp"/>

        <TextView
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:id="@+id/text_recipes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Recipe"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/lightColorWidget"/>

        <ImageButton
            android:layout_marginEnd="8dp"
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button_next_recipe"
            android:src="@drawable/ic_arrow_forward_24dp"/>
    </LinearLayout>
</RelativeLayout>